<Window x:Class="JewelleryManagementSystem.UIUtilities.PasswordBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelleryManagementSystem.UIUtilities"
        mc:Ignorable="d"
         Height="150" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Password" FontWeight="Bold" Margin="5"></TextBlock>
            <TextBox x:Name="txtPassword" Margin="5"></TextBox>
        </StackPanel>
            <Button x:Name="btnOK" Content="Proceed" Click="btnOK_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
